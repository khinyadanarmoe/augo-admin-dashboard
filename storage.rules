rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.admin == true;
    }
    
    // Announcer profile pictures - only admins can upload
    match /announcers/{announcerId}/profile.jpg {
      allow read: if true; // Public read access
      allow write: if isAdmin(); // Only admins can upload
    }
    
    // User profile pictures
    match /users/{userId}/profile.jpg {
      allow read: if true; // Public read access
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }
    
    // Post images
    match /posts/{postId}/{fileName} {
      allow read: if true; // Public read access
      allow write: if isAuthenticated(); // Any authenticated user can upload post images
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
